@*
    Here The controller does not pass anything to the view, however we can bind the view to a model like in this case.

*@

@model Category
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create category</h2>
            <hr />
        </div>
        <div class="row mb-3">
            <div class="col">
                <label asp-for="Name"></label>
            </div>
            <div class="col">
                <input asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <label asp-for="DisplayOrder"></label>
            </div>
            <div class="col">
                <input asp-for="DisplayOrder" class="form-control" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <button type="submit" class="btn btn-primary" style="width:150px">Submit</button>
            </div>
            <div class="col">
                <a asp-asp-controller="CategoryController" asp-action="Index" class="btn btn-secondary" style="width:150px">
                    Back to category
                </a>
            </div>
        </div>
    </div>
</form>